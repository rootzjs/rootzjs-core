{
    "name": "@rootzjs/core",
    "version": "2.0.23",
    "description": "A Modern state management tool for react application",
    "main": "./dist/rootz-core.min.js",
    "scripts": {
        "test": "jest",
        "test:watch": "npm test -- --watch",
        "test:coverage": "npm test -- --coverage",
        "webpack-dev": "webpack --config webpack.dev.js",
        "webpack-prod": "webpack --config webpack.prod.js",
        "webpack": "npm run webpack-dev && npm run webpack-prod",
        "lint": "eslint --fix \"{src, tests}/**/*.{js,jsx}\"",
        "format": "prettier --write \"{src, test}/**/*.{js,jsx}\"",
        "format:check": "prettier --list-different \"{src, tests}/**/*.{js,jsx}\"",
        "prepublishOnly": "npm run lint && npm test",
        "pre-comit": "npm run prepublishOnly",
        "babelpack": "babel src/rootz-core.js -d dist --copy-files"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rootzjs/rootzjs-core.git"
    },
    "keywords": [
        "hot",
        "flux",
        "live",
        "rootz",
        "state",
        "rootzjs",
        "rootz app",
        "react state",
        "rootz devtools",
        "state management"
    ],
    "author": "Trishanth Naidu <rootzjs@icould.com> (https://github.com/trishanthnaidu)",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/rootzjs/rootzjs-core/issues"
    },
    "engines": {
        "node": ">=10"
    },
    "homepage": "https://github.com/rootzjs/rootzjs-core#readme",
    "devDependencies": {
        "@babel/plugin-proposal-export-default-from": "^7.12.1",
        "@babel/plugin-transform-react-jsx": "^7.12.10",
        "@babel/plugin-transform-runtime": "^7.12.15",
        "@babel/preset-env": "^7.7.6",
        "@babel/preset-react": "^7.7.4",
        "@babel/runtime": "^7.12.13",
        "@rootzjs/core": "^2.0.13",
        "@testing-library/jest-dom": "^5.11.9",
        "@testing-library/react": "^11.2.5",
        "babel-jest": "^24.9.0",
        "babel-plugin-minify-mangle-names": "^0.5.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.6",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-config-react-app": "^5.1.0",
        "eslint-plugin-flowtype": "^4.5.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.2.0",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^2.5.1",
        "jest": "^26.6.3",
        "prettier": "^1.19.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-scripts": "^4.0.2",
        "react-test-renderer": "^17.0.1",
        "rollup": "^2.34.2",
        "terser-webpack-plugin": "^5.0.3",
        "web-vitals": "^1.0.1",
        "webpack": "^5.10.1",
        "webpack-cli": "^4.2.0",
        "webpack-merge": "^5.7.3"
    }
}
